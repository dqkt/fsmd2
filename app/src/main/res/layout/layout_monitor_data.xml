<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:elevation="1dp"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/layout_info">

        <LinearLayout
            android:layout_gravity="top"
            android:baselineAligned="false"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:id="@+id/layout_status">

                <View
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:background="@drawable/circle"
                    android:id="@+id/view_status" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="23">

                <TextView
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="4"
                    android:id="@+id/textview_vibration_level" />

                <TextView
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="@drawable/secondary_text_color"
                    android:fontFamily="sans-serif"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:id="@+id/textview_position" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="12">

                <TextView
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@drawable/secondary_text_color"
                    android:fontFamily="sans-serif-light"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:id="@+id/textview_time" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:id="@+id/layout_details">

            <View
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="5"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="35">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:id="@+id/textview_x_vib"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:id="@+id/textview_y_vib"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:id="@+id/textview_z_vib"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:id="@+id/textview_time_received"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/bottom_divider"/>
</LinearLayout>